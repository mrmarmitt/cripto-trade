<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Main Application Log -->
    <appender name="MAIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/cripto-trade.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/cripto-trade-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Validation Logs (All Validation Types) -->
    <appender name="VALIDATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/validation.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/validation-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error Logs -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/errors.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/errors-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Logger Configurations -->
    
    <!-- Performance Service Logger -->
    <logger name="com.marmitt.ctrade.application.service.PerformanceService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MAIN_FILE"/>
        <appender-ref ref="VALIDATION_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Trade Service Logger -->
    <logger name="com.marmitt.ctrade.application.service.TradeService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MAIN_FILE"/>
        <appender-ref ref="VALIDATION_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Trading Orchestrator Logger -->
    <logger name="com.marmitt.ctrade.application.service.TradingOrchestrator" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MAIN_FILE"/>
        <appender-ref ref="VALIDATION_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Trading Service Logger -->
    <logger name="com.marmitt.ctrade.application.service.TradingService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MAIN_FILE"/>
        <appender-ref ref="VALIDATION_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Application Package Logger -->
    <logger name="com.marmitt.ctrade" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MAIN_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Root Logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MAIN_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>